				$personal = mysqli_query($conexion, "SELECT * FROM Usuarios WHERE status=1");
				$numPers = mysqli_num_rows($personal);
				$pers = 0;				
				while($pers < $numPers) {
					$datosPer = mysqli_fetch_assoc($personal);
					if(file_exists("imagenes/personal/".$datosPer["id_usuario"].".png")){
						$imagenTmp1=$datosPer["id_usuario"].'.png';
					}
					else{
						if(file_exists("imagenes/personal/".$datosPer["id_usuario"].".jpg")){
							$imagenTmp1=$datosPer["id_usuario"].'.jpg';
						}
						else{
							if(file_exists("imagenes/personal/".$datosPer["id_usuario"].".gif")){
								$imagenTmp1=$datosPer["id_usuario"].'.gif';
							}
							else {
								if(file_exists("imagenes/personal/".$datosPer["id_usuario"].".svg")){
									$imagenTmp1=$datosPer["id_usuario"].'.svg';
								}
								else {
									$imagenTmp1="disable.gif";
								}
							}
						}
					}
					echo '
						<div nombre="'.strtolower($datosPer["nombre"]).'" tipo="fila" style="position:relative;width:95%;padding:10px;border:1px solid rgba(0,0,0,0.2);border-top:none">
