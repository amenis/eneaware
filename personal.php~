					echo '
						<div nombre="'.strtolower($datosPer["nombre"]).'" tipo="fila" style="position:relative;width:95%;padding:10px;border:1px solid rgba(0,0,0,0.2);border-top:none">
							<b>'.$datosPer["nombre"].'</b>							
							<div id="resPer'.$datosPer["id_usuario"].'" style="display:none">
								<form destino="resultadoRegistro" action="accionesPersonal.php" style="display:inline-block">
									<input type="hidden" name="accion" value="restaurar">
									<input type="hidden" name="id" value="'.$datosPer["id_usuario"].'">
									<br>¿Estas seguro que deseas restaurar a esta persona <b>'.$datosPer["nombre"].'</b>?
									<button >Si, estoy seguro</button>									
								</form>
								<button style="display:inline-block" onclick="$(this).parent().toggle(\'drop\')">No</button>
								<p>Atencion: esta accion <b>restaurara</b> a esta persona en el sistema (el inicio de sesion estara deshabilitado)</p>
							</div>
							<img src="imagenes/checkmark.png" style="position:absolute;top:4px;right:4px;cursor:pointer" onclick="$(\'#resPer'.$datosPer["id_usuario"].'\').toggle(\'drop\')">
						</div>
					'.mysqli_error($conexion);
					$pers++;	
				}
				mysqli_free_result($personal);
			echo '
				<div style="height:20px;width:95%;padding-left:20px;"></div>
			</div>		
		</div>
	</div>
	';
	if(substr($_SESSION["Permisos_Eneaware"][0],0,1)=="0"){
		echo "<script>$('#principalInner [permiso=A]').remove()</script>";
	}
	if(substr($_SESSION["Permisos_Eneaware"][0],1,1)=="0"){
		echo "<script>$('#principalInner [permiso=D]').remove()</script>";
	}
	if(substr($_SESSION["Permisos_Eneaware"][0],2,1)=="0"){
		echo "
			<script>
				$('#principalInner form[permiso=M] input').prop('disabled', true);
				$('#principalInner form[permiso=M] select').prop('disabled', true);
				$('#principalInner form[permiso=M] button').remove();
			</script>";
	}
	mysqli_close($conexion);
?>