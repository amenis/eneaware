									<input type="file" style="display:none" nombre="foto" accept=".jpg, .gif, .png">
									<input type="hidden" name="accion" value="modificar"> 
									<input type="hidden" name="id" value="'.$datosPer["id_usuario"].'"> 
									<table>
										<tr><td>Nombre completo: <br><small>con apellidos </small> </td><td><input type="text" value="'.$datosPer["nombre"].'" placeholder="Ejemplo: Thomas Ritchie" name="nombre" size="50" required title="Este campo debe completarse"></td><td></td></tr>
